<h3 class="h3Title">Edit user: {{user.name}}</h3>
<form action="/users/update" method="post" class="form">
  <input type="hidden" name="id" value="{{user.id}}" />
  <div class="form-control">
    <label for="name">Name:</label>
    <input
      type="text"
      name="name"
      placeholder="Type users name"
      value="{{user.name}}"
    />
  </div>
  <div class="form-control">
    <label for="occupation">Occupation:</label>
    <input
      type="text"
      name="occupation"
      placeholder="Type users occupation"
      value="{{user.occupation}}"
    />
  </div>
  <div class="form-control">
    <label for="age">Age:</label>
    <input
      type="number"
      name="age"
      placeholder="Type users age"
      value="{{user.age}}"
    />
  </div>
  <div class="form-control">
    <label for="occupation">Heigth:</label>
    <input
      type="number"
      step="0.01"
      name="heigth"
      placeholder="Type users heigth"
      value="{{user.heigth}}"
    />
  </div>
  <div class="form-control form-checkbox">
    {{#if user.newsletter}}
      <input type="checkbox" name="newsletter" checked />
    {{else}}
      <input type="checkbox" name="newsletter" />
    {{/if}}
    <label for="newsletter">Get News?</label>
  </div>
  <input type="submit" value="Edit" />
</form>

<div class="address-container">
  <h3>Addresses</h3>
  <form action="/address/create" method="post">
    <input type="hidden" name="UserId" value="{{user.id}}" />
    <div class="form-control">
      <label for="street">Street:</label>
      <input type="text" name="street" placeholder="Type the Street Name" />
    </div>
    <div class="form-control">
      <label for="number">Number:</label>
      <input type="text" name="number" placeholder="Type the House Number" />
    </div>
    <div class="form-control">
      <label for="city">City:</label>
      <input type="text" name="city" placeholder="Type the City Name" />
    </div>
    <input type="submit" value="Add Address" />
  </form>
  <div class="address-list">
    <h4>Address List:</h4>
    {{#each user.Addresses}}
      <p>#{{this.id}} - {{this.street}} - {{this.number}} - {{this.city}}</p>
    {{/each}}
  </div>
</div>