<h1>All Products</h1>
<div class="products">
  {{#each products}}
    <div class="product">
      {{#if this.image}}
        <img src="{{this.image}}" alt="{{this.name}}" />
      {{else}}

        <img
          src="https://th.bing.com/th/id/OIP.F00dCf4bXxX0J-qEEf4qIQHaD6?rs=1&pid=ImgDetMain"
          alt="No Image - Placeholder"
        />
      {{/if}}
      <h3>{{this.name}}</h3>
      <p>R$ {{this.price}}</p>
      <div class="actions">
        <a class="aDetails" href="/{{this._id}}">Details</a>
      </div>
    </div>
  {{/each}}
</div>