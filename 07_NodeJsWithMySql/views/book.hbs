<div id="book-page">
  {{! <a href="/books">Back to Books</a> }}
  <div class="container">
    <h3>{{book.name}}</h3>
    <p>This book has <span class="bold">{{book.pages}}</span> pages.</p>
    <p>This book costs US$ <span class="bold">{{book.price}}</span>.</p>
    <div class="actions">
      <a href="/books/edit/{{book.id}}">Edit Book</a>
      <form action="/books/remove/{{book.id}}" method="POST">
        <input type="submit" value="Remove Book" />
      </form>
    </div>
  </div>
</div>