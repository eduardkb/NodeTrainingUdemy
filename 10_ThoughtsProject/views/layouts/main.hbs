<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Thoughts Project - EKB</title>
    <link rel="stylesheet" href="/css/styles.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css"
    />
    <link rel="shortcut icon" href="/img/favicon.ico" type="image/x-icon" />
  </head>
  <body>
    <nav id="navbar">
      <a href="/" id="logo">
        <img src="/img/thoughts_logo.png" alt="Thoughts" />
      </a>
      <ul>
        <li><a href="/">Thoughts</a></li>
        {{! CONDITIONALLY PRINT MENU ACCORDING TO LOGGED IN USER }}
        {{#if session.userid}}
          <li><a href="/thoughts/dashboard">Dashboard</a></li>
          <li><a href="/logout">Logout</a></li>
        {{else}}
          <li><a href="/login">Login</a></li>
          <li><a href="/register">Register</a></li>
        {{/if}}

      </ul>
    </nav>
    <div class="container">
      {{! DISPLAY FLASH MESSAGES IF EXISTENT }}
      {{#if messages.message}}
        <div class="message">
          {{messages.message}}
        </div>
      {{/if}}
      {{! PAGE BODY }}
      {{{body}}}
    </div>
    <footer>
      <p><span>Thoughts EKB &copy; 2023</span></p>
    </footer>
  </body>
</html>