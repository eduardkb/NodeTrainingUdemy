<div class="home-header">
  {{#if search}}
    <h1>Thoughts filtered by: <span>{{search}}</span> </h1>
    {{#if thQty}}
      <p>We found <span>{{thQty}}</span> thoughts for you.</p>
    {{else}}
      <p>No thoughts were found with the term <span>{{search}}</span></p>
    {{/if}}
  {{else}}
    <h1>All our <span>Thoughts</span> </h1>
  {{/if}}
  <form action="/" method="get">
    <input
      type="text"
      name="search"
      placeholder="Are you looking for something?"
    />
    <input type="submit" class="btn" value="Search" />
  </form>
  <div class="order-container">
    <span>Order by Creation Date:</span>
    <form action="/" method="get">
      <input type="hidden" name="search" value="{{this.search}}" />
      <input type="hidden" name="order" value="new" />
      <button type="submit"><i class="bi bi-arrow-up"></i></button>
    </form>
    <form action="/" method="get">
      <input type="hidden" name="search" value="{{this.search}}" />
      <input type="hidden" name="order" value="old" />
      <button type="submit"><i class="bi bi-arrow-down"></i></button>
    </form>
    <a href="/">Clear Filter</a>
  </div>
</div>
<div class="toughts-container">
  {{#each thoughts}}
    <figure>
      <blockquote>
        "{{this.title}}"
      </blockquote>
      <figcaption>
        by
        <span>{{this.User.name}}</span>
      </figcaption>
    </figure>
  {{/each}}
</div>